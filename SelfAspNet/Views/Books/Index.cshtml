@model IEnumerable<SelfAspNet.Models.Book>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
@* <span class="text-success">@ViewBag.Success</span> *@

<p>
    <a asp-action="Create">Create New</a>
</p>
@* <cache>現在時刻：@DateTime.Now</cache> *@
@* <cache vary-by-query="mode">現在時刻：@DateTime.Now</cache> *@
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Isbn)
                @* @Html.DisplayNameFor(m => m.Isbn) *@
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Publisher)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Published)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sample)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Isbn)
                @* @Html.DisplayFor(modelItem => item.Isbn,
                    new { width = 80 , height = 30 }) *@
                @* @Html.DisplayFor(modelItem => item.Isbn, "Isbn") *@
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Publisher)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Published)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sample)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                @* <a asp-action="Details" asp-route-id="@item.Id"
                    asp-route-mode="dark">Details（Dark）</a> | *@
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

